    "entities": "^7.0.0",
    "mensch": "^0.3.4",
    "slick": "^1.12.2",
    "web-resource-inliner": "^7.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.13",
    "batch": "0.6.1",
    "browserify": "^17.0.0",
